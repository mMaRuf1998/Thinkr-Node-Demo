<% layout("/layout/boilerplate") -%>


    <div class="row p-3">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 mt-5 mb-3">
            <h2>Add Items</h2>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
    <div class="formContainer mx-auto">
        <form action="/list" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label text-right">Item</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="name" placeholder="Item Name" name="product[name]"
                        required>
                </div>
            </div>
            <div class="form-group row mt-4">
                <label for="qty" class="col-sm-3 col-form-label text-right">Quantity</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="qty" placeholder="Quantity" name="product[qty]"
                        required>
                </div>
            </div>
            <div class="form-group row mt-4">
                <label for="price" class="col-sm-3 col-form-label text-right">Unit Price</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="u_price" placeholder="Unit Price"
                        name="product[u_price]" required>
                </div>
            </div>
            <div class="form-group row mt-4">
                <label for="image" class="col-sm-3 col-form-label text-right">Add images</label>
                <div class="col-sm-7">
                    <input type="file" class="form-control" id="image" name="product[image]" required multiple>
                </div>
            </div>
            <div class="form-group row mt-4">
                <label for="price" class="col-sm-3 col-form-label text-right">Category</label>
                <div class="col-sm-7">
                    <select class="form-select" name="product[category]">
                        <option selected></option>
                        <option value="fruit">Fruit</option>
                        <option value="vegetable">Vegetable</option>
                        <option value="dairy">Dairy</option>
                        <option value="fast food">Fast food</option>
                        <option value="drinks">Drinks</option>
                        <option value="household">Household</option>
                        <option value="others">Others</option>
                      </select>
                </div>
            </div>

            

            <button class="btn btn-success mt-4">Add</button>

        </form>
    </div>


    </body>

    </html>